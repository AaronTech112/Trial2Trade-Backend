# Copy this file to .env and set real values.

# SMTP email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.hostinger.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=info@trial2trade.com
EMAIL_HOST_PASSWORD=REPLACE_WITH_SMTP_PASSWORD
DEFAULT_FROM_EMAIL=Trial 2 Trade <info@trial2trade.com>
EMAIL_TIMEOUT=30

# Resend backup provider (optional)
RESEND_API_KEY=REPLACE_WITH_RESEND_API_KEY

# Flutterwave keys
FLUTTERWAVE_PUBLIC_KEY=REPLACE_WITH_PUBLIC_KEY
FLUTTERWAVE_SECRET_KEY=REPLACE_WITH_SECRET_KEY

# MyFXBook credentials
MYFXBOOK_EMAIL=REPLACE_WITH_MYFXBOOK_EMAIL
MYFXBOOK_PASSWORD=REPLACE_WITH_MYFXBOOK_PASSWORD